<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class='formItem'><%= user.name%></td>
        <td class='formItem'><%= user.email %></td>
        <td class='formItem'><%= 'Password saved' %></td>
        <td class='icon'><%= link_to '<span class="icon"><i class="fa fa-eye"></i></span>'.html_safe, user %></td>
        <td class='icon'><%= link_to '<span class="icon"><i class="fa fa-edit"></i></span>'.html_safe, edit_user_path(user)%></td>
        <td class='icon'><%= link_to '<span class="icon"><i class="fa fa-trash"></i></span>'.html_safe, user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<button type="button" class="button">New User</button>'.html_safe, new_user_path %>
